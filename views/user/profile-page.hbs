<div class="container">
    <div class="card mb-3">
        <div class="row g-0 m-3">
        <div class="col-md-10">
            <div class="card-body">
                <h3 class="card-title">@{{user.username}}</h3>
                <p class="card-text">Bio: {{user.bio}}</p>
                <p class="card-text">E-mail: {{user.email}}</p>
            <div class="d-flex justify-content-end me-4">
                <a href="/users/{{user.id}}/edit-user" class="btn btn-primary">Profile Settings</a>
            </div>
            </div>
        </div>
        </div>
  </div>

  <div>
    <h4>Followed series:</h4>
    <hr>
        <div class="container">
            <div class="row">
                {{#each user.matches as |match|}}
                <div class="card align-items-center m-3" style="width: 18rem;">
                    <img src="{{match.serieId.image}}" class="img-thumbnail rounded-start mt-3" alt="Image not available" style="height: 400px;">
                        <div class="card-body">
                        <h5 class="card-title"><a href="/series/{{match.serieId.id}}" class="card-link text-dark">{{match.serieId.name}}</a></h5>
                        </div>
                </div>
                {{/each}}
            </div>
        </div>
  </div>
</div>