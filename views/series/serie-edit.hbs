
<div class="row justify-content-md-center">
    <div class="col-12 col-md-6 col-lg-3">
        <h2 class="mt-2 mb-3" style="text-align: center">Update: {{serie.name}}</h2>
        <form action="/series/{{serie.id}}/edit" method="post">
            <h6>Serie name:</h6>
            <div class="input-group mb-3">
                <input type="text" name="name" value="{{ serie.name }}" class="form-control {{#if errors.name}}is-invalid{{/if}}">
                {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}                
            </div>
            <h6>Image URL:</h6>
            <div class="input-group mb-3">
                <input type="text" name="image" value="{{serie.image}}" class="form-control {{#if errors.image}}is-invalid{{/if}}">
                {{#if errors.image}}<div class="invalid-feedback">{{errors.image}}</div>{{/if}}
            </div>
            <h6>Description:</h6>
            <div class="input-group mb-3">
                <textarea name="description" value="{{serie.description}}" rows="10" class="form-control">{{serie.description}}</textarea>
            </div>
            <h6>Network:</h6>
            <div class="input-group mb-3">
                <input type="text" name="network" value="{{serie.network}}" class="form-control">
            </div>
            <h6>Platform:</h6>
            <div class="input-group mb-3">
                <select name="platform" class="form-select">
                    <option value="{{serie.platform}}" hidden="hidden" selected="selected">{{serie.platform}}</option>
                    <option value="Movistar+">Movistar+</option>
                    <option value="HBO Max">HBO Max</option>
                    <option value="Netflix">Netflix</option>
                    <option value="Amazon Prime Video">Amazon Prime Video</option>
                    <option value="Disney+">Disney+</option>
                    <option value="Apple TV">Apple TV</option>
                    <option value="Crunchyroll">Crunchyroll</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <h6>Status:</h6>
            <div class="input-group mb-3">
                <select name="status" class="form-select">
                    <option value="{{serie.status}}" hidden="hidden" selected="selected">{{serie.status}}</option>
                    <option value="Ended">Ended</option>
                    <option value="Running">Running</option>
                    <option value="To Be Determined">To Be Determined</option>
                </select>
            </div>
            <h6>Rating:</h6>
            <div class="input-group mb-3">
                <input type="number" name="rating" step="0.1" class="form-control" value="{{serie.rating}}">
            </div>
        <div class="d-grid mb-5">
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
        </form>
    </div>
</div>


