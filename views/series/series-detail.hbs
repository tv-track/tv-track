<div>
  
  <div class="card mb-3">
    <div class="row g-0 m-3">
      <div class="col-md-2">
        <img src="{{serie.image}}" class="img-fluid rounded-start" alt="Image not available" style="width: 200px;">
      </div>
      <div class="col-md-10">
        <div class="card-body">
          <h5 class="card-title">{{serie.name}}</h5>
          <p class="card-text">{{serie.description}}</p>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-end mb-3">
    {{#if currentUser.admin}}
      <a href="/serie/{{serie.id}}/new-episode" class="btn btn-danger me-3">New episode</a>
    {{/if}}
    <a href="/user" class="btn btn-warning me-3">Add to favorites</a>
    <a href="/" class="btn btn-secondary me-5">Go back</a>
  </div>

  <hr>

  <div class="row">
    {{#each serie.episodes as |episode|}}    
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
          <div class="card mb-3" style="width: 18rem;">
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Season: {{episode.season}}</li>
                <li class="list-group-item">Episode: {{episode.episode}}</li>
                <li class="list-group-item"><b>{{episode.name}}</b></li>
              </ul>
          </div>
      </div>
    {{/each}}
  </div>

</div>
