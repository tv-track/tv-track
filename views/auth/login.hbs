<div class="row justify-content-md-center">
    <div class="col-12 col-md-6 col-lg-3">
        <h2 class="mt-2 mb-3" style="text-align: center">Login</h2>
        <form action="/login" method="post">
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
                <input type="text" name="username" value="{{ user.username }}" class="form-control {{#if errors.username}}is-invalid{{/if}}" placeholder="User name">
                {{#if errors.username}}<div class="invalid-feedback">{{ errors.username }}</div>{{/if}}
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-key fa-fw"></i></span>
                <input type="password" name="password" value="{{user.password}}" class="form-control {{#if errors.password}}is-invalid{{/if}}" placeholder="User password">
                {{#if errors.password}}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}
            </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
        </form>
        <hr>
        <div class="d-grid">
            <a href="/register" class="btn btn-secondary">Register</a>
        </div>
    </div>  
</div>